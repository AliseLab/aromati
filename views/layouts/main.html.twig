  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ settings.site_title }}</title>
  <meta name="keywords" content="{{ trans( req, 'site_keywords' ) }}">
  <meta name="description" content="{{ trans( req, 'site_description' ) }}">
  
	{% for file in css %}
    	<link rel="stylesheet" href="css/{{ file }}">
    {% endfor %}
    
</head>
<body>

	{% block content %}
	{% endblock %}
	
	<script>
		var global = {
			language: '{{ language }}',
		};
	</script>
	{% for file in js %}
		<script src="js/{{ file }}"></script>
	{% endfor %}
	
</body>

</html>
