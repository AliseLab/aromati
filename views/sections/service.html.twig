
<section class="service">
	<div class="container">
		<div class="page-section text-center">
			<h2 class="page-section__title">{{ trans( req, 'services_header' ) }}</h2>
			<p class="page-section__paragraph">{{ trans( req, 'services_text' ) }}</p>
			<div class="row gutters-40">
				{% for i in 1..6 %}
					{% if ( i - 1 ) % 3 == 0 %}
						</div>
						<div class="row gutters-40">
					{% endif %}
					<div class="col-md-4">
						<div class="thumbnail">
							<i class="material-icons">trending_up</i>
							<h4 class="service__title">{{ trans( req, 'service_'~i~'_header') }}</h4>
							<p class="service__paragraph">{{ trans( req, 'service_'~i~'_text') }}</p>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</section>
