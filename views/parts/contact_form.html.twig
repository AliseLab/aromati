<div class="contact-form">
	<form action="/mail" method="post" autocomplete="off">
		<div>
			<input class="form-control" type="text" name="name" value="" placeholder="{{ trans( req, 'contact_form_name' ) }}" />
		</div>
		<div>
			<input class="form-control" type="email" name="email" value="" placeholder="{{ trans( req, 'contact_form_email' ) }}" />
		</div>
		<div>
			<input class="form-control" type="tel" name="phone" value="" placeholder="{{ trans( req, 'contact_form_phone' ) }}" />
		</div>
		<div>
			<textarea class="form-control" name="message" placeholder="{{ trans( req, 'contact_form_comments' ) }}"></textarea>
		</div>
		<div>
			<button class="form-control" type="submit">
				<span>{{ trans( req, 'contact_form_submit' ) }}</span>
			</button>
		</div>
		<span class="close">X</span>
	</form>
</div>
